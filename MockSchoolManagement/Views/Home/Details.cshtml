@model MockSchoolManagement.ViewModels.HomeDetailsViewModel;
@{ 
    ViewBag.Title = "Student Details";
    var photoPath = "~/images/" + (Model.Student.PhotoPath ?? "noimage.png");
}
<h3>@Model.PageTitle</h3>
<div class="row justify-content-center m-3">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>Name: @Model.Student.Name</h4>
                <h4>Mail: @Model.Student.Email</h4>
                <h4>Major: @Model.Student.Major</h4>
            </div>
            <div class="card-footer text-center">
                <a href="" class="btn btn-primary">back</a>
                <a href="" class="btn btn-primary">edit</a>
                <a href="" class="btn btn-primary">delete</a>
            </div>
        </div>
    </div>
</div>

