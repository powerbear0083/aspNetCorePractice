@using MockSchoolManagement.Extensions
@model IEnumerable<Student>
@{
    ViewBag.Title = "Student List";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "images/" + (student.PhotoPath ?? "noimage.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3 class="card-title">@student.Name</h3>
            </div>
            <img src="@photoPath" alt="@student.Name" class="card-img-top" asp-append-version="true">
            <div class="card-body text-center">
                <h5 class="card-title">Major: @student.Major.GetDisplayName()</h5>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@student.Id"  class="btn btn-info">Check</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
